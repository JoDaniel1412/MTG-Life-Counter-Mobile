<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.atlas.mtglifecounter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/SmokeLight"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".controllers.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.PlayerSelectionActivity" />
        <activity android:name=".controllers.SetupGameActivity" />
        <activity android:name=".controllers.GameActivity" />
        <activity android:name=".controllers.NamesActivity"></activity>
    </application>

</manifest>